<div class="col-lg-12">
  <div class="card">
    <div class="card-header">
      <i class="fa fa-align-justify"></i> Category
      <a class="btn btn-success float-right" href="/admin/content/create/category">Táº¡o Category</a>
    </div>
    <div class="card-body page-list">
      <table class="table table-responsive-sm table-striped" id="admin-content">
        <thead>
          <tr>
            <th>Name</th>
            <th>Parent</th>
            <th>Created</th>
            <th>Status</th>
            <th class='text-right'>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          {{log this.data}}
          <tr>
            <td>{{ this.data.name }}</a></td>
            <td>{{ this.data.parent.data.name }}</td>
            <td>{{ this.data.createdOnFormatted}}</td>
             <td>
             {{#ifvalue this.data.status equals="true"}}
              <span class="badge badge-success">Active</span>
              {{else}}
              <span class="badge badge-danger">Disalbe</span>
              {{/ifvalue}}
            </td>
            <td class='text-right'>
              <a href="{{ this.data.url }}" target="_blank" class="btn btn-sm btn-success rmargin">View</a>
              <a href="/admin/content/edit/{{ this.data.contentType }}/{{ this.id }}"
                class="btn btn-sm btn-primary rmargin">Edit</a>

              <a tabindex="0" class="btn btn-sm btn-danger" role="button" data-html="true" data-toggle="popover"
                data-trigger="focus" title="Delete <b>{{ this.data.title }}</b> Forever?" data-content="<a href='/content/{{ this.id }}'
   class='btn btn-sm btn-danger rmargin'>Confirm Delete</a>
">Delete</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>